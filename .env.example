# Database
DATABASE_URL=sqlite:///./data/app.db

# Redis
REDIS_URL=redis://redis:6379/0

# ============================================
# PRODUCTION EMAIL CONFIGURATION (Gmail SMTP)
# ============================================

# SMTP for SENDING emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USERNAME=yourmail@mail.com         
SMTP_PASSWORD=your_app_password_here
FROM_EMAIL=yourmail@mail.com 
FROM_NAME=Advanced Autonomics

# IMAP for RECEIVING replies (Gmail)
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_USE_SSL=true
IMAP_USERNAME=yourmail@mail.com           
IMAP_PASSWORD=your_app_password_here

# ============================================
# Ollama AI
# ============================================
OLLAMA_HOST=http://ollama:11434
OLLAMA_MODEL=llama3.2:3b

# ============================================
# AI AGENT CONFIGURATION
# ============================================

# Agent Control
AGENT_ENABLED=true
AGENT_AUTO_START=false  # Set to true after testing

# Agent Intervals (minutes)
AGENT_CHECK_INTERVAL=5
INBOX_CHECK_INTERVAL=15

# Rate Limits (IMPORTANT: Gmail has limits!)
DAILY_EMAIL_LIMIT=2000   # Gmail limit: 500/day, start conservative
HOURLY_EMAIL_LIMIT=60  # Don't burst too fast

# Business Hours (adjust to your timezone)
BUSINESS_HOURS_START=09:00
BUSINESS_HOURS_END=17:00
TIMEZONE=America/New_York  # Change if needed

# Safety
RESPECT_BUSINESS_HOURS=false
RESPECT_UNSUBSCRIBES=true
PAUSE_ON_HIGH_ERROR_RATE=true

# AI Generation
USE_AI_GENERATION=true

# Logging
LOG_LEVEL=INFO

# Website (for reference)
COMPANY_WEBSITE=https://www.advanced-autonomics.com
